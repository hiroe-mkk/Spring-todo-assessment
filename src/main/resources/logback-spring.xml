<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern><![CDATA[date:%d{yyyy-MM-dd HH:mm:ss}\tthread:%thread\tlevel:%-5level\tlogger:%-48logger{48}\tmessage:%replace(%msg){'(\r\n|\r|\n)','$1  '}%n%replace(%replace(%xEx){'(\r\n|\r|\n)','$1  '}){'  $',''}%nopex]]></pattern>
        </encoder>
    </appender>

    <!-- Application Loggers -->
    <logger name="com.example.todo">
        <level value="debug"/>
    </logger>

    <logger name="com.example.todo.domain.repository">
        <level value="trace"/>
    </logger>

    <logger name="com.example.todo.common.logging.TraceLoggingInterceptor">
        <level value="trace"/>
    </logger>

    <!-- 3rdparty Loggers -->
    <logger name="org.springframework">
        <level value="warn"/>
    </logger>

    <logger name="org.springframework.web.servlet">
        <level value="info"/>
    </logger>

    <logger name="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping">
        <level value="trace"/>
    </logger>

    <logger name="org.springframework.jdbc.core.JdbcTemplate">
        <level value="trace"/>
    </logger>

    <logger name="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <level value="debug"/>
    </logger>

    <root level="warn">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
